@using HRM.ApplicationCore.Model.Response;
@model IEnumerable<EmployeeResponseModel>;
<div class="page-header">
    <h1>List of Employee</h1>
</div>
<a asp-action="Create" asp-controller="Employee">Add New Employee</a>
<table class="table-bordered table-striped table-hovered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Id</th>
            <th>DOB</th>
            <th>SSN</th>
            <th>Current Address</th>
            <th>Phone</th>
            <th>HireDate</th>
            <th>EndDate</th>
            <th>EmployeeRole Id</th>
            <th>EmployeeStatus Id</th>
            <th>EmployeeType Id</th>
            <th>Manager Id</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var m in Model)
            {
                <tr>
                    <td>@m.FirstName</td>
                    <td>@m.LastName</td>
                    <td>@m.EmailId</td>
                    <td>@m.DOB</td>
                    <td>@m.SSN</td>
                    <td>@m.CurrentAddress</td>
                    <td>@m.Phone</td>
                    <td>@m.HireDate</td>
                    <td>@m.EndDate</td>
                    <td>@m.EmployeeRoleId</td>
                    <td>@m.EmployeeStatusId</td>
                    <td>@m.EmployeeTypeId</td>
                    <td>@m.ManagerId</td>
                    <td><a asp-action="Edit" asp-controller="Employee" asp-route-id="@m.Id">Edit</a></td>
                    <td><a asp-action="Delete" asp-controller="Employee" asp-route-id = "@m.Id">Delete</a></td>
                </tr>
            }
        }
    </tbody>
</table>