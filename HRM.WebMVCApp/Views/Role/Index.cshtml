@using HRM.ApplicationCore.Model.Response;
@model IEnumerable<RoleResponseModel>;
<div class="page-header">
    <h1>List of Role</h1>
</div>
<a asp-action="Create" asp-controller="Role">Add New Role</a>
<table class="table table-bordered table-striped table-hovered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var m in Model)
            {
                        <tr>
                            <td>@m.Name</td>
                            <td>@m.Description</td>
                            <td><a asp-action="Edit" asp-controller="Role" asp-route-id="@m.Id">Edit</a></td>
                            <td><a asp-action="Delete" asp-controller="Role" asp-route-id="@m.Id">Delete</a></td>
                        </tr>
            }
        }
    </tbody>
</table>